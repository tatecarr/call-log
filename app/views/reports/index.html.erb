<% content_for :title, "Reports" %>

<h1>Reports</h1>

<div id="house-reports">
<h2>Houses</h2>
<% form_tag '/houses.pdf', :method => 'get' do %>
  <% for house in @houses %>
	<%= check_box_tag "bu_code_equals[]", house.bu_code %><%= house.name %><br />
  <% end %>
  <%= submit_tag "Print Selected House Reports", :disable_with => "Printing..." %>
<% end %>
</div>

<div id="staff-reports">
<h2>Staff</h2>
<% form_tag '/call-log.pdf', :method => 'get' do %>
  <%= hidden_field_tag :predefined_report, "non-res" %>
  <%= submit_tag "Print Non-Res Staff Report", :disable_with => "Printing..." %>
<% end -%>

<% form_tag '/call-log.pdf', :method => 'get' do %>
  <%= hidden_field_tag :predefined_report, "relief" %>
  <%= submit_tag "Print Relief Staff Report", :disable_with => "Printing..." %>
<% end -%>

<% form_tag '/call-log.pdf', :method => 'get' do %>
  <%= hidden_field_tag :predefined_report, "relief-with-full" %>
  <%= submit_tag "Print Selected Full-Time With Relief Staff Report", :disable_with => "Printing..." %>
<% end -%>
</div>

