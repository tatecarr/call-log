<% content_for :title, "Login" %>

<div id="login_forms">
	<% form_tag sessions_path do %>
	  <p>
	    <strong><%= label_tag :login, "Username or Email Address" %></strong><br />
	    <%= text_field_tag :login, params[:login] %>
	  </p>
	  <p>
	    <strong><%= label_tag :password %></strong><br />
	    <%= password_field_tag :password %>
	  </p>
	  <p><%= submit_tag "Log in" %></p>
	<% end %>

	<p><strong>Forgot your password?</strong> <a href="" onclick="Effect.toggle('forgot-password-form', 'slide', { duration: 0.3 }); return false;">Click Here</a></p> 

	<div id="forgot-password-form" style="display: none;">
	<% form_tag(:action => "reset_password") do %>
		<p>
			Enter your email address below<br />
			<%= text_field_tag "email" %>
		</p>
		<p><%= submit_tag "Submit" %></p>
	<% end -%>
	</div>
</div>

