<h1>Log In</h1>

<% if logged_in? %>
	You are logged in. 
	<% if admin? %>
		You are admin.
	<% else %>
		You are not admin.
	<% end %>
<% end %>

<% form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Username or Email Address" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Log in" %></p>
<% end %>


<p><a href="" onclick="Effect.toggle('forgot-password-form', 'slide', { duration: 0.3 }); return false;">Forgot your password? Click Here</a></p> 

<div id="forgot-password-form" style="display: none;">
<% form_tag(:action => "reset_password") do %>
	<p>
		Enter your email address below<br />
		<%= text_field_tag "email" %>
	</p>
	<p><%= submit_tag "Submit" %></p>
<% end -%>
</div>

